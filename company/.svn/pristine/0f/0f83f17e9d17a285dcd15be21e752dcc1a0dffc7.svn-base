<script type="text/javascript">
//2014-11-13 huangwt 去掉企业相册                              
var noLoginError = false;
var fileNullError = false;
var extensionError = false;
var maxCountError = false;
var photoUploadFail = false;
var mien_infor;

var maxCount = 5;
var queueLength = 0;
var errorCount = 0;
var queueSizeCount = 5;
var queueSize = 0;
var remCount = 0;
$(document).ready(function(){
		//上传相片
	    $('#upload_photo').uploadify({
			auto:true,
			swf:'/swf/uploadify.swf',
			uploader : '/company/saveTempPhoto/',
			formData: {
				'upload_cookie_userid': '{/$upload_cookie_userid/}',
				'upload_cookie_nickname':'{/$upload_cookie_nickname/}',
				'upload_cookie_usertype':'{/$upload_cookie_usertype/}',
				'upload_cookie_userkey':'{/$upload_cookie_userkey/}',
				'upload_cookie_tick':'{/$upload_cookie_tick/}',
                                'upload_cookie_accountid':'{/$upload_cookie_accountid/}'
			},
			queueID:'imgLst',
			fileSizeLimit: '2048kb',
			fileTypeExts:'*.jpg;*.bmp;*.gif;*.jpeg;*.png',
			removeCompleted:false,
			buttonImage:'{/$siteurl.style/}/uploadify/submit.png',
			fileTypeDesc:'All Files',
			method:'post',
			cancelImage: '{/$siteurl.style/}/uploadify/cancel.png',
			width:85,
			height:27,
			multi:true,
			itemTemplate:'<li class="imgLoading" id="${fileID}">'
	            +'<a class="del hbFntWes" href="javascript:$(\'#${instanceID}\').uploadify(\'cancel\', \'${fileID}\')">&#xf057;</a>'
	            +'<div class="pic"><img src=""></div>'
	            +'<div class="load"></div>'
	            +'<div class="loadTxt">上传中...</div>'
	            +'<div class="imgInp" style="display:none">'
	            +'<input type="text" class="newImg imgTxt" value="" />'
	            +'<span style="display:none" v="" /></span>'
	            +'<input type="hidden" class="pics" name="hddNewPhotoName[]" value="" />'
	            +'</div>'
	        	+'</li>',
	        onSelect:function(file){
        		queueLength++;
        		queueSize++;
				if(remCount==0){
					$.anchorMsg('您最多上传20张',{icon:'warning'});
					$('#upload_photo').uploadify('cancel',file.id);
					return false;
				}
				else if( remCount<queueSizeCount && queueSize>remCount){
					$.anchorMsg('您本次最多上传'+remCount+'张',{icon:'warning'});
					$('#upload_photo').uploadify('cancel',file.id);
					return false;
				}
				else if(queueSize>queueSizeCount){
					$.anchorMsg('每次只能上传5张照片',{icon:'warning'});
					$('#upload_photo').uploadify('cancel',file.id);
					return false;
				}
				if(queueLength<=maxCount){
					return true;
				}
				else{
					$('#upload_photo').uploadify('cancel',file.id);
					return false;
				}
	        },
	        onDialogOpen:function(){
	        	queueSize =0;
	        	remCount = maxCount-queueLength;
		    },
	        onUploadSuccess:function(file,data,response){
	        	if(data!=null&&data!=undefined&&data!=''){
	        		var json = eval("("+data+")");
					 if(json.error==100){
		                 noLoginError=true;
		                 $.anchorMsg("请选择您要上传的文件", { icon: "warning" });
		             }else if(json.error==101){
		             	 fileNullError=true;
		                 $.anchorMsg("文件超过最大限制", { icon: "warning" });
		             }else if(json.error==102){
		             	 extensionError=true;
		                 $.anchorMsg("您上传的文件格式有误", { icon: "warning" });
		             }else if (json.error==103) {
		             	 maxCountError = true;
		                 $.anchorMsg("抱歉！最多允许上传{/$max_photo_count/}张照片", { icon: "warning" });
		             } else if (json.error==104) {
		             	 photoUploadFail = true;
		                 $.anchorMsg("文件上传失败", { icon: "warning" });
		             } else {
	     				var path = json.path;
	     				$('#'+file.id).removeClass('imgLoading');
	     				$('#'+file.id).find('img').attr('src',path+'?'+Math.random().toString().replace('.','0'));
	     				$('#'+file.id).find('.loadTxt').hide();
	     				$('#'+file.id).find('.imgInp').show().find('input').val(json.name).next().attr('v',json.name);
	     				$('#'+file.id).find('input[name^=hddNewPhotoName]').val(json.newname+'|'+json.name);
	     			}
	            }
			},
			onSelectError:function(file,errorCode,errorMsg){

				var settings = this.settings;
				switch(errorCode) {
					case SWFUpload.QUEUE_ERROR.QUEUE_LIMIT_EXCEEDED:
						$.anchorMsg("一次最多上传" + settings.queueSizeLimit + "张照片！", { icon: "warning" });
						break;
					case SWFUpload.QUEUE_ERROR.FILE_EXCEEDS_SIZE_LIMIT:
						$.anchorMsg('抱歉 "' + file.name + '" 文件查过了大小限制 (' + settings.fileSizeLimit + ').',{icon:'warning'});
						break;
					case SWFUpload.QUEUE_ERROR.ZERO_BYTE_FILE:
						$.anchorMsg('文件 "' + file.name + '" 为空.',{icon:'warning'});
						break;
					case SWFUpload.QUEUE_ERROR.INVALID_FILETYPE:
						$.anchorMsg('文件 "' + file.name + '" 类型不支持 (' + settings.fileTypeDesc + ').',{icon:'warning'});
						break;
				}
			},
			onQueueComplete:function(data){
				if (!noLoginError&&!fileNullError&&!extensionError&&!maxCountError && !photoUploadFail) {
	                var filesUploadCount= data.uploadsSuccessful - data.uploadsErrored> 0 ?(data.uploadsSuccessful - data.uploadsErrored):0;
	                if(data.uploadsErrored!=0){
	                    $.anchorMsg("上传失败，请重新上传",{ icon: "warning" });
	                    return;
	                }
	            }
			},
			onCancel:function(file_id){
				queueLength--;
			}
	});

	

  	//已经上传名称的事件
    $('#imgLst .oldImg').live('mouseover', function(event) {
        event.preventDefault();
        $(this).closest('li').addClass('hov');
    }).live('mouseout', function(event) {
        event.preventDefault();
        $(this).closest('li').removeClass('hov');
    }).live('focus', function(event) {
        event.preventDefault();
        $(this).addClass('imgTxtHov');
    }).live('blur', function(event) {
        event.preventDefault();
        var _slef = $(this);
        _slef.removeClass('imgTxtHov');
        var oldName = _slef.next().attr('v');
        var photo_id = _slef.closest('li').find('input[name=photo_id]').val();
        if (_slef.val().trim().length == 0) {
            $.anchorMsg('请填写你要修改相片的名称', { icon: 'warning' });
            _slef.val(oldName);
            return;
        }
        if (_slef.val().trim().length >= 64) {
            $.anchorMsg('相片名称过长', { icon: 'warning' });
            _slef.val(oldName);
            return;
        }
        if (_slef.val() != oldName) {
        	$('#spnModPhoto').append('<input type="hidden" class="modpics" name="hddModPhotoID[]" value="'+photo_id+'|'+_slef.val()+'">');
        }
    });
    //还未保存的
     $('#imgLst .newImg').live('mouseover', function(event) {
        event.preventDefault();
        $(this).closest('li').addClass('hov');
    }).live('mouseout', function(event) {
        event.preventDefault();
        $(this).closest('li').removeClass('hov');
    }).live('focus', function(event) {
        event.preventDefault();
        $(this).addClass('imgTxtHov');
    }).live('blur', function(event) {
        event.preventDefault();
        var _slef = $(this);
        _slef.removeClass('imgTxtHov');
        var oldName = _slef.next().attr('v');
        if (_slef.val().trim().length == 0) {
            $.anchorMsg('请填写你要修改相片的名称', { icon: 'warning' });
            _slef.val(oldName);
            return;
        }
        if (_slef.val().trim().length >= 64) {
            $.anchorMsg('相片名称过长', { icon: 'warning' });
            return;
        }
        if (_slef.val() != oldName) {
            var temp_data = _slef.closest('li').find('input[name^=hddNewPhotoName]');
            var img_path = temp_data.val().split('|')[0];
            temp_data.val(img_path+'|'+_slef.val());
        }
    });

    $("#phoneDiv input").focus(function(){
        var thisInput = $(this);
        var inputName = thisInput.attr("name");
        var defaultVal = "分机号";
        if(inputName == "zone_infor"){
            defaultVal = "区号";
        }else if(inputName == "phone_infor"){
            defaultVal = "固定电话";
        }
        var currentVal = $.trim(thisInput.val());
        if(currentVal == defaultVal){
            thisInput.val("");
            thisInput.css("color","#000");
        }
    });

    $("#phoneDiv input").blur(function(){
        var thisInput = $(this);
        var inputName = thisInput.attr("name");
        var defaultVal = "分机号";
        if(inputName == "zone_infor"){
            defaultVal = "区号";
        }else if(inputName == "phone_infor"){
            defaultVal = "固定电话";
        }
        var currentVal = $.trim(thisInput.val());
        if(currentVal == defaultVal || currentVal == ""){
            thisInput.val(defaultVal);
            thisInput.css("color","#A6A6A6");
        }
    });

    
    $(".rateNav a").click(function(){
        var key = $(this).attr("k");
        var fixHeight = $("#fstNav").height();
        scroller(key, 700, fixHeight);
        return false;
    });
});

//保存数据成功
function sucPhotoCallBack(json){
	if(json&&json.error){
		$.message(json.error,{icon:'warning'});
		return;
	}
	var temp = '<li id="li{0}">'
				+'<input type="hidden" id="photo_id" name="photo_id" value="{0}">'
				+'<input type="hidden" id="photo_path" name="photo_path" value="{1}">'
		   		+'<a class="del hbFntWes" onclick="delPhoto(this);return false;" href="javascript:void(0);">&#xf057;</a>'
		    	+'<div class="pic"><img src="{/$photo_virt_path/}{2}"></div>'
		    	+'<div class="load"></div>'
		    	+'<div class="imgInp">'
		    	+'<input type="text" class="oldImg imgTxt" value="{3}" />'
		    	+'<span style="display:none" v="{3}" /></span>'
		   		+'</div>'
				+'</li>';
	//清空数据
	$('#imgLst').empty();
	for(var i=0;i< json.company_photo.length;i++){
		var photo = json.company_photo[i];
		$('#imgLst').append($.format(temp,photo.photo_id,photo.photo_path,photo.photo_thumb_path,photo.photo_name));
	}
	$('#alr_photo_count').html(json.alr_photo_count);
	$('#spnDelPhoto').empty();
	$('#spnModPhoto').empty();
    $("#vdNam").val(mien_infor.has_data?mien_infor.mien_name:"视频名称");
    $("#vdSrc").val(mien_infor.has_data?mien_infor.mien_path:"优酷、土豆等网站的视频url地址");
    $.focusblur('#vdNam');
    $.focusblur('#vdSrc');
	$.anchorMsg("保存数据成功！");
	return;
}

//删除相片
function delPhoto(obj){
	var self = $(obj);
	var li = self.closest('li');
	var photo_id = li.find('input[name=photo_id]').val();
	li.remove();
	maxCount++;
	$('#spnDelPhoto').append('<input type="hidden" class="delpics" name="hddDelPhotoID[]" value="'+photo_id+'">');
}



