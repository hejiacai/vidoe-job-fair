	});
});

/**
 *  下载的简历
 */
var download = {
	init:function() {
		this._initEvent();
	},
	_initEvent:function(){
		// 列表操作菜单
		$('#lstContent .btnOperate').click(function(e){
			$(this).closest('[download]').siblings().find('.tipBox').hide();
			if($(this).next('.tipBox').is(':visible')) {
				$(this).next('.tipBox').hide();	
			}else {
				$(this).next('.tipBox').show();
			}
			e.stopPropagation();
			e.preventDefault();
		});
		$('body').click(function(){
			$('#lstContent .tipBox').hide();
		});		
		// 全选/反选
		$('#allSelect').bindCheckBox('chkdownload','#lstContent');
		$('#reverseallSelect').bindCheckBox('chkdownload','#lstContent');
		// 全选
		$('#allSelect').click(function(){
			if($(this).is(':checked')) {
				$('#reverseallSelect').attr('checked','checked');	
			}else {
				$('#reverseallSelect').removeAttr('checked');
			}
		});
		$('#reverseallSelect').click(function(){
			if($(this).is(':checked')) {
				$('#allSelect').attr('checked','checked');	
			}else {
				$('#allSelect').removeAttr('checked');
			}
		});	

		// 水印 
		$('#txtKeyWord').watermark('输入姓名或简历编号');
		
		var a = function() {
			var v = $('#txtKeyWord').val();
			if(v==''||v=="输入姓名或简历编号") {
				$('#btnResumeSearch').removeClass('btn1').addClass('btn3');
			}else{
				$('#btnResumeSearch').removeClass('btn3').addClass('btn1');
			}
			setTimeout(a,500);
		};
		setTimeout(a,500);
		
		// 清空筛选条件
		$('#btnClearFilter,#btnClearFilterSearch').click(function(e){
			$('#tstDropJob').initContent();
			$('#tstDropTime').initContent();
			$('#txtKeyWord').val('').watermark('输入姓名或简历编号');
			download.submit(null,0);				
			e.preventDefault();
		});

		$('#lstContent').tooltip({
			 selector: "a[data-toggle=tooltip]",html:true
	    });  	

		$('#lstContent .mark a').click(function(e){
			 var resume_id = $(this).closest('[resume]').attr('resume');
			 download._updateRemark(resume_id);
			 e.preventDefault();
		});	

		// 单个邀请
		$('#lstContent .opinvite').click(function(e){
			 var resume_id = $(this).closest('[download]').attr('resume');
			 download._invitesingle(resume_id);
			 e.preventDefault();
		});

		// 单个备注
		$('#lstContent .opremark').click(function(e){
			 var resume_id = $(this).closest('[resume]').attr('resume');
			 download._updateRemark(resume_id);
			 e.preventDefault();
		});
		
		// 保存到电脑
		$('#lstContent .opdown').click(function(e){
			 var element = $(this).closest('[resume]'),
			 	 resume_id = element.attr('resume'),
			 	 download_id = element.attr('download');
			 download._downresume(resume_id,download_id);
			 e.preventDefault();
		});

		// 转发到邮箱
		$('#lstContent .opsendmail').click(function(e){
			 var element = $(this).closest('[resume]'),
			 	 resume_id = element.attr('resume');
			 download._sendEmail(resume_id);
			 e.preventDefault();
		});		
		// 放入到回收站
		$('#lstContent .oprecycle').click(function(e){
			 var element = $(this).closest('[resume]'),
			 	 download_id = element.attr('download'),
			 	 name = element.find('.user_name').attr('name'),
				 val = cookieutility.get('deletedownload');
			 if(val == 'true'){
				 download._deletedownload(download_id);
			 }else {
				 $.showModal(encodeURI('{/get_url rule="/download/Deletedownload/" data="names='+name+'&ids='+download_id+'&v='+Math.random()+'"/}'),{title:'删除'});
	   	     }
			 e.preventDefault();
		});	



		//批量邀请 
		$('#btnOpInvite').click(function(e){
			e.preventDefault();
			var resumes = download.selectresume();
			if(resumes.length<=0) {
				$.anchor('请选择需要邀请的简历',{icon:'info'});
				return;
			}
			if(resumes.length==1) {
				download._invitesingle(resumes[0]);
			}else {
				download._invitemulti(resumes);
			}
		});	

		// 批量保存到电脑
		$('#btnSaveComputer').click(function(e){
			e.preventDefault();
			var resumeids = download.selectresume();
			if(resumeids.length<=0) {
				$.anchor('请选择需要保存的简历',{icon:'info'});
				return;
			}
			download._downresume(resumeids.join(','));
		});	
		
		// 批量转发到邮箱
		$('#btnSendEmail').click(function(e){
			e.preventDefault();
			var resumeids = download.selectresume();
			if(resumeids.length<=0) {
				$.anchor('请选择需要转发的简历',{icon:'info'});
				return;
			}
			download._sendEmail(resumeids.join(','));			
		});	

		// 批量放入到回收站 
		$('#btnOprecycle').click(function(e){
			e.preventDefault();
			var downloads = download.selectdownload();
			if(downloads.length<=0) {
				$.anchor('请选择需要删除的简历',{icon:'info'});
				return;
			}
			var names =[],
				val = cookieutility.get('deletedownload');
			for(var i = 0,len = downloads.length;i < len; i+=1 ) {
				names.push($('#lstContent').find('[download="'+downloads[i]+'"]').find('.user_name').attr('name'));
			} 
			 if(val == 'true'){
				 download._deletedownload(downloads.join(','));
			 }else {
				 $.showModal(encodeURI('{/get_url rule="/download/Deletedownload/" data="names='+names.join(',')+'&ids='+downloads.join(',')+'&v='+Math.random()+'"/}'),{title:'删除'});
	   	     }
		});	

		// 按姓名/简历编号搜索
		$('#btnResumeSearch').click(function(){
			 download.submit(null,1);
		});

		$("#txtKeyWord").keydown(function(e){
	    	if(e.keyCode == 13){
	            $("#btnResumeSearch").click();
	        }
	    });
	},
	_invitesingle:function(resumeid) {
		$.showModal('{/get_url rule="/invite/invitesingleshow/" data="resumeID='+resumeid+'"/}-v-'+Math.random(),{title:'邀请面试 ',onclose:function(){
			download._invitCallback(resumeid);
		}});	
	},
	_invitemulti:function(resumeids) {
		$.showModal('{/get_url rule="/invite/InviteMultiShow/"/}resumeids-'+resumeids.join('-resumeids-'),{title:'邀请面试',onclose:function(){
			download._invitCallback(resumeids.join(','));
		}});
	},
	_invitCallback:function(resumeids) {
		var resumeids = resumeids.split(','),
			downloadids = [];
		for(var i = 0,len = resumeids.length;i<len;i++) {
			downloadids.push($('#lstContent').find('[resume="'+resumeids[i]+'"]').attr('download'));
		}
		if(downloadids.length<=0) {
			return;
		}
		$.getJSON("{/get_url rule="/download/GetStatus/"/}"+'downloadid-'+downloadids.join(',')+'-v-'+Math.random(),function(result){
			if(!result.error) {
				$.each(result,function(i,n){
					if(n.is_invite==1) {
						 $('#lstContent').find('[download="'+n.download_id+'"]')
						 .find('.status').removeClass().addClass('status sta green').html('已邀请');
					}
					
				});
			}
		});
	},
	_deletedownload:function(ids) {
	   // 删除下载的简历	
	   $.getJSON('{/get_url rule="/download/Deletedownload/"/}'+'op-del-ids-'+ids+'-v-'+Math.random(),function(result){
			if(result.success) {
				var arr = ids.split(',');
				$.each(arr,function(i,n){
					//更新页面
					var element = $('#lstContent').find('[download="'+n+'"]');
					element.remove();
				});
				$.anchorMsg('已放入回收站');
			}else {
				$.anchorMsg(result.error, { icon: 'fail' }); 
			}
	    });
    },
	_updateRemark:function(resumeid) {
		// 更新备注
		$.showModal('{/get_url rule="/resumeremark/index/"/}resume_id-'+resumeid+'-v-'+Math.random(),{title:'备注',onclose:function(){
			// 更新备注
			$.getJSON("{/get_url rule="/resumeremark/ResumeRemark/"/}"+'-resumeid-'+resumeid+'-v-'+Math.random(),function(result){
			    var element = $('#lstContent').find('[resume="'+resumeid+'"]');
				element.find('span.mark a').unTooltip();
				if(result.remark ==''||result.remark == null) {
					element.find('span.mark').removeClass('markIn').find('a').removeAttr('data-toggle').removeAttr('title');				
				}else {
					element.find('span.mark').addClass('markIn').find('a').attr('data-toggle','tooltip').attr('title',result.remark+'&nbsp;'+result.updatetime);
				}			    
			});
		}});
    },
    _downresume:function(resumeid,downloadid) {
        var url = '{/get_url rule="/download/DownLoad" data="resumeid='+resumeid+'&downloadid='+downloadid+'"/}';
    	$.showModal(url,{title:'请选择保存的文件格式'});
    },
    _downresumeword:function(ids,downloadids){
    	var url = '{/get_url rule="/resume/worddown" data="resumeid='+ids+'"/}';
		$(this).attr('href',url).attr('target','_blank');
    },
    _downresumehtml:function(ids) {
    	var url = '{/get_url rule="/resume/htmldown" data="resumeid='+ids+'"/}';
		$(this).attr('href',url).attr('target','_blank');
    },
    _downresumeExcel:function(ids) {
    	var url = '{/get_url rule="/excel/index/" data="resumeid='+ids+'"/}';
    	$(this).attr('href',url).attr('target','_blank');
    },
    _downresumePdf:function(ids) {
    	var url = '{/get_url rule="/resume/pdfdown/" data="resumeid='+ids+'"/}';
    	$(this).attr('href',url).attr('target','_blank');
    },
    _sendEmail:function(resumeid) {
    	$.showModal('{/get_url rule="/resume/wordsend" data="resumeid='+resumeid+'"/}',{title:'转发到邮箱'});
    },
    selectdownload:function(){
       var checkboxs = $('#lstContent').find('input[name="chkdownload"]:checked'),
       	   downloadids = [];
   	   for(var i=0,len=checkboxs.length;i<len;i+=1) {
   			downloadids.push($(checkboxs[i]).val());
   	   } 	
       return downloadids;
   },
   selectresume:function(){
       var checkboxs = $('#lstContent').find('input[name="chkdownload"]:checked'),
       	   resumeids = [];
   	   for(var i=0,len=checkboxs.length;i<len;i+=1) {
   		   resumeids.push($(checkboxs[i]).closest('tr').attr('resume'));
   	   } 	
       return resumeids;
   },
   submit:function(showmodel,searchmodel) {
		if(showmodel!=null) {
			$('#hddShowModel').val(showmodel);
		}
		if(searchmodel!=null) {
			$('#hddSeachModel').val(searchmodel);
		}
		//清空水印 
		$('#frmdownload').clearWatermark();	
		$('#frmdownload').get(0).submit();	
   }    
};
download.init();
</script>
</body>
</html>
