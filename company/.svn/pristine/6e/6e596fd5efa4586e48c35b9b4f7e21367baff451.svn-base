<script>
 $.setIndex("zindex");//为需要赋层级设置的元素设置class为zindex

var recycle ={
    init:function() {
         //回车事件
       $("#keyword").keydown(function(e){
            if(e.keyCode == 13){
                $("#onSubmit").click();
            }
        });
        // 水印 
        $('#keyword').watermark('输入姓名或简历编号');
        //全选 反选
        $(".resuemSelectAll").click(function(){
            if($(this).is(':checked')) {
                $('.rMentLit label input[name="chkrecycle"]').attr('checked','checked');	
            }else {
                $('.rMentLit label input[name="chkrecycle"]:checked').removeAttr('checked');
            }
        });
        //      单选
		$('.rMentLit label input[name="chkrecycle"]').click(function(){
			if(!$(this).prop('checked')){
				$(".resuemSelectAll").removeAttr('checked');
			}
			var chkapplyLengthAll = $('.rMentLit label input[name="chkrecycle"]').length;
			var chkapplyLength = $('.rMentLit label input[name="chkrecycle"]:checked').length;
			if(chkapplyLength == chkapplyLengthAll){
				$(".resuemSelectAll").attr('checked','checked');
			}
			
		});
        $(".remark_contr").mouseover(function(e){
            e.preventDefault();
          $(this).next(".remark_show").addClass("mTitcut2");
        }).mouseout(function(e){
            e.preventDefault();
          $(this).next(".remark_show").removeClass("mTitcut2");
        });
        //批量简历恢复
        $(".resumeBack").click(function(e){
          
                var ids = recycle.selectIds();
                if(ids.length<=0) {
                    $.anchor('请选择需要恢复的简历',{icon:'info'});
                    return;
                }
                 $.confirm("确定要将选中简历全部恢复吗？","恢复简历",function (){
                    recycle.recovery(ids.join(","));
                });
        });
        //简历单个恢复
        $(".singleBack").click(function(e){
             var id = $(this).parents(".rMentLv").attr("data-id");
            if(typeof id != 'undefined' && id > 0) {
                $.confirm("确定要将该简历恢复吗？","恢复简历",function () {
                    recycle.recovery("" + id);
                });
            } else {
                $.anchor('请选择一个简历后再进行恢复',{icon:'warning'});
            }
        });
        //简历批量删除
        $(".deleteResume").click(function(){
            var ids = recycle.selectIds();
            if (ids.length > 0) {
                 $.confirm("确定要将该简历删除吗？","删除简历",function () {
                    recycle.deleteresume(ids.join(","));
                 });
            } else {
                $.anchor('请选择简历后再进行删除',{icon:'warning'});
            }
        });
        //清空回收站
        $(".recycleBin").click(function(){
             $.confirm("回收站内的数据将被全部删除，并且不能恢复，是否继续清空？","清空回收站",function () {
                recycle.clearresume();
            });
        });
        //提交搜索
        $("#searchKey").click(function(){
             //搜索条件
             var job_id = "";
             var keyword = $("#keyword").val();
             recycle.submit(job_id,keyword);
        });
        //按来源查看
        $(".origintype").click(function(){
             var origin_id = $(this).attr("data-type");
             recycle.submit(origin_id,"");
        });
    },
    selectIds:function(){
        var checkboxs = $('.rMentLitBg').find('input[name="chkrecycle"]:checked'),
        ids = [];
        for(var i=0,len=checkboxs.length;i<len;i+=1) {
            ids.push($(checkboxs[i]).val());
        } 	
        return ids;
    },
    submit:function(origin_id,keyword){
        if(keyword =='输入姓名或简历编号'){
            keyword ="";
        }
        var data =[];
            if(origin_id !=''){
                data.push("origin_id="+origin_id);
            }
            if(keyword !=''){
                data.push("keyword="+keyword);
                data.push("search_model=1");
            }
        if(data.length >0){
            window.location.href = '{/get_url rule="/recycle/index/"/}'+"?"+data.join("&");
        }else{
            window.location.href = '{/get_url rule="/recycle/index/"/}'
        } 
    },
    recovery : function(ids) {
            $.getJSON('{/get_url rule="/recycle/recoverydo/" data="ids='+ids+'&v='+Math.random()+'"/}', function(result){
                if (result.success) {
                    //删除列表
                     $.anchorMsg("恢复成功", { icon: 'success'}); 
                    window.location.reload();
                } else {
                    $.anchorMsg(result.error, { icon: 'warning'}); 
                }
            });
    },
    deleteresume : function (ids) {
        $.getJSON('{/get_url rule="/recycle/delete/" data="ids='+ids+'&v='+Math.random()+'"/}', function(result){
            if (result.success) {
                $.anchorMsg('删除成功');
                setTimeout("window.location.reload()", 500);
            } else {
                $.anchorMsg(result.error, {icon: 'warning'}); 
            }
        });
    },
    clearresume : function () {
        $.getJSON('{/get_url rule="/recycle/clear"/}', function(result) {
            if (result.success) {
                $.anchorMsg('删除成功');
                setTimeout("window.location.reload()", 500);
            } else {
                $.anchorMsg(result.error, {icon: 'warning'}); 
            }
        });
    }

}
    
recycle.init();
$.getJSON('{/get_url rule="/account/twodimensioncode/"/}',function(result){
    if(result&&result.status) {
        var src = result.data.codeurl;
        $('#ewmBox img').attr('src',src);
        $('#ewmBox').show();
    }
});

$("#ewmBox").find("a").click(function(){$(this).parents("#ewmBox").hide();return false;});
</script>
