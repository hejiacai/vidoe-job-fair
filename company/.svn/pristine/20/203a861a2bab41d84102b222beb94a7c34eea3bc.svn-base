<script type="text/javascript">
hbjs.use('widge.overlay.hbDialog,widge.overlay.confirmBox', function(Dialog, ConfirmBox, $) {
    var pWidth = 70,
        fontWidth = 18,
        dialog = new Dialog({
        close:'X',
        title:'系统提示',
        idName: 'delDialog',
        width: 450,
        isOverflow: false,
        isAjax: true
    });

    $(".add_client a").click(function(){
        var leftcount = parseInt($('#leftcount').text()),
            msg = '您的代招客户已经达到上限啦！';
        if(leftcount<=0){
            ConfirmBox.timeBomb(msg, {
                    name: 'warning',
                    width: pWidth + msg.length * fontWidth,
                    timeout: 1500
                });
        }else{
            window.location.href = "{/geturl rule='/hrcompany/add'/}";
        }
    });

    $(".stop").click(function(){
       var _this = $(this),
            companyid = _this.closest('tr').attr('data-cid'),
            count = {};
        $.getJSON('/hrmanage/getApplyCount', {companyid: companyid}, function(json, textStatus) {
            if(parseInt(json.status)>0){
                if(parseInt(json.applycount)>0) {
                    showDialog(companyid,json,1);
                } else {
                    ConfirmBox.confirm('<div><i style="color:red">*</i>操作成功后该客户的所有职位将停止招聘</div>', '停止招聘', function(){
                        this.hide();
                        submitDelete(companyid,1);
                        
                    }, null, {width:350});
                }
            }else{
                ConfirmBox.timeBomb(json.msg, {
                    name: 'fail',
                    width: pWidth + json.msg.length * fontWidth,
                    timeout: 1000
                });
            }
        });       
    });

    $(".delete").click(function(){
        var _this = $(this),
            companyid = _this.closest('tr').attr('data-cid'),
            count = {};

            $.getJSON('/hrmanage/getApplyCount', {companyid: companyid}, function(json, textStatus) {
                if(parseInt(json.status)>0){
                    if(parseInt(json.applycount)>0) {
                        showDialog(companyid,json,0);
                    } else {
                        ConfirmBox.confirm('<div><i style="color:red">*</i>删除后该客户之前的所有招聘信息无法再看到</div>', '删除代招客户', function(){
                            this.hide();
                            submitDelete(companyid,0);
                        }, null, {width:350});
                    }
                }else{
                    ConfirmBox.timeBomb(json.msg, {
                        name: 'fail',
                        width: pWidth + json.msg.length * fontWidth,
                        timeout: 1000
                    });
                }
            });     
    });

    function submitDelete(id,act) {
        $.getJSON('/hrmanage/delCompany', {companyid: id, operate: act}, function(json, textStatus) {
            if(parseInt(json.status)>0){
                ConfirmBox.timeBomb(json.msg, {
                    name: 'success',
                    width: pWidth + json.msg.length * fontWidth,
                    timeout: 1000
                });
                setTimeout("window.location.reload()",1000);
            }else{
                ConfirmBox.timeBomb(json.msg, {
                    name: 'fail',
                    width: pWidth + json.msg.length * fontWidth,
                    timeout: 1000
                });
            }
        });
    }

    function showDialog (id,list,act) {
        if(act == 1){
            var html = ['<div class="warning_dialog">',
                    '<dl><dt></dt>',
                    '<dd><p>该客户的<strong style="color:red">'+list.jobcount+'</strong>个职位共有<strong style="color:red">'+list.applycount+'</strong>份简历未回复，请先回复完再停招代招客户</p>',
                    '<p style="font-size:12px;margin-top:20px"><i style="color:red">*</i>  操作成功后该客户的所有职位将停止招聘</p>',
                    '<a href="javascript:void(0);" class="cpromisetip graybutn" style="float:right" id="del">回绝并停止招聘</a>',
                    '<a href="/apply/index/?account_id='+id+'" class="cpromisetip">手动回复简历</a>',
                    '</dd></dl>',
                '</div>'].join('');
        }else{
            var html = ['<div class="warning_dialog">',
                    '<dl><dt></dt>',
                    '<dd><p>该客户的<strong style="color:red">'+list.jobcount+'</strong>个职位共有<strong style="color:red">'+list.applycount+'</strong>份简历未回复，请先回复完再删除代招客户</p>',
                    '<p style="font-size:12px;margin-top:20px"><i style="color:red">*</i>  删除后该客户之前的所有招聘信息无法再看到</p>',
                    '<a href="javascript:void(0);" class="cpromisetip graybutn" style="float:right" id="del">回绝并删除客户</a>',
                    '<a href="/apply/index/?account_id='+id+'" class="cpromisetip">手动回复简历</a>',
                    '</dd></dl>',
                '</div>'].join('');
        }

        dialog.setContent(html).show();
        dialog.query('#del').on('click',function () {
            submitDelete(id,act);
        })
    }
})
</script>
