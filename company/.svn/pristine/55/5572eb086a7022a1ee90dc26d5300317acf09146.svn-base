			var chkapplyLengthAll = $('.rMentLit label input[name="chkfav"]').length;
			var chkapplyLength = $('.rMentLit label input[name="chkfav"]:checked').length;
			if(chkapplyLength == chkapplyLengthAll){
				$(".resuemSelectAll").attr('checked','checked');
			}
			
		});
        
