            keyword ="";
        }
        var data =[];
            if(tag_id !=''){
                data.push("tag_id="+tag_id);
            }
        
            if(keyword !=''){
                data.push("keyword="+keyword);
                data.push("search_model=1");
            }
        if(data.length >0){
            window.location.href = '{/get_url rule="/fav/index/"/}'+"?"+data.join("&");
        }else{
            window.location.href = '{/get_url rule="/fav/index/"/}'
        }   
