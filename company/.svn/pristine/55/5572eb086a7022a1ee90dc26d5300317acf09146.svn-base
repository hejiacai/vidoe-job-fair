        $('.savePc').click(function(e){
            e.preventDefault();
            var resumes = fav.selectResume();
            if(resumes.length<=0) {
                    $.anchor('请选择收藏的简历',{icon:'info'});
                    return;
            }

            $.getJSON('{/get_url rule="/resume/CheckCompanyLetter/"/}'+ '-v-' + Math.random(), function(json){
                if(!json.status){
                    if(json.code == 701) {
                        fav._layeropen(json.msg);
                    }
                }else{
                    fav._downresume(resumes.join(','));
                }
            });
        });
        
        //全选 反选
        $(".resuemSelectAll").click(function(){
            if($(this).is(':checked')) {
                $('.rMentLit label input[name="chkfav"]').attr('checked','checked');	
            }else {
                $('.rMentLit label input[name="chkfav"]:checked').removeAttr('checked');
            }
        });
        
