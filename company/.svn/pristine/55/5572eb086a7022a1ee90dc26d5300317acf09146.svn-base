        //全选 反选
        $(".resuemSelectAll").click(function(){
            if($(this).is(':checked')) {
                $('.rMentLit label input[name="chkfav"]').attr('checked','checked');	
            }else {
                $('.rMentLit label input[name="chkfav"]:checked').removeAttr('checked');
            }
        });
        //      单选
		$('.rMentLit label input[name="chkfav"]').click(function(){
			if(!$(this).prop('checked')){
				$(".resuemSelectAll").removeAttr('checked');
