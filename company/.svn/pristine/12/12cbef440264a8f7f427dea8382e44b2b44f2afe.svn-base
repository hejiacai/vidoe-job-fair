                                                {/else/}
                                                <a href="javascript:void(0);" class="btn3  btnsF12">简历已读</a>
                                                {//if/}
                                                <a href="#" class="btn opremark">备注</a>
                                                <a href="#" class="btn opdown">保存到电脑</a>
                                                <a href="#" class="btn opsendmail">转发到邮箱</a>
                                                <a href="#" class="btn oprecycle">放入回收站</a>
                                                {/if $apply['status']!=3/}<a href="#" class="btn oprefuse">婉言拒绝</a>{//if/}
                                             {//if/}   
