<body id="body">
{/if $left_type==1/}
{/include 'new_header.html' par="全职招聘" cur='面试管理'/}
{/else/}
{/include 'new_header.html' par="全职招聘" cur='简历管理'/}
{//if/}


<div class="resumentNbg">
	{/if $left_type==2/}
	{/include 'resume/apply/nav.html' cur="offer管理"/}
	{/else/}
	<div class="rMentLt">
		<dl class="rMentDl">
			<dd>
				<a href="{/get_url rule='/invitev1/'/}" >
					<em></em><span>面试管理</span>
				</a>
			</dd>
			<dd class="cut">
				<a href="{/get_url rule='/offermanager'/}">
					<em></em><span>offer管理</span>
				</a>
			</dd>
		</dl>
	</div>
	{//if/}

	<!-- 右侧内容 -->
	<div class="rMentRt">
		<div class="content">
			<hgroup>
				<div class="part part1">
					<form id="frmInvite" method="get" action="{/get_url rule='/offermanager/index/'/}" class="offerSearch">
						<input type="hidden" name="left_type" value="{/$left_type/}">
						<!-- 面试状态 -->
						<div class="offerStatus">
							<span>状态：</span>
							<ul class="statusList">
								<li class="is_send {/if $re_con['is_send']==0/}curStatus{//if/}" data-value='0'><a href="{/get_url rule='/offermanager/'/}?left_type={/$left_type/}&is_send=0"><span></span>未发offer</a></li>
								<li class="is_send {/if $re_con['is_send']==1/}curStatus{//if/}" data-value='1'><a href="{/get_url rule='/offermanager/'/}?left_type={/$left_type/}&is_send=1"><span></span>已发offer</a></li>
							</ul>
							<input type="hidden" name="is_send" value="{/$re_con['is_send']/}"/>
						</div>

						<!-- 筛选条件 -->
						<div class="filterOptions">
							<span>职位：</span>
							<div class="xkTabSelect inB"><span id="tstDropJob" class="drop zindex"></span></div>


							<!-- 面试时间 -->
							{/if $re_con['is_send']==1/}
							<div class="makSelect makTime inB">
								<b>发送日期：</b>
								<input type="text" id="startDay" name="s_time" value="{/$re_con['s_time']/}"  autocomplete='off' onClick="WdatePicker({onpicked:function(){$('.j_time_search_btn').click();submit();},oncleared:function(){$('.j_time_search_btn').click();submit();}})">
								<span>~</span>
								<input type="text" id="endDay" name="e_time" value="{/$re_con['e_time']/}"  autocomplete='off' onClick="WdatePicker({onpicked:function(){$('.j_time_search_btn').click();submit();},oncleared:function(){$('.j_time_search_btn').click();submit();}})">
							</div>
							{//if/}

							<!-- 姓名 -->
							<div class="nameSearch inB">
								姓名：
								<input type="text" value="{/$re_con['name']/}" name="name" placeholder="请输入"  autocomplete='off'>
							</div>

							<!-- 搜索按钮 -->
							<input type="button" value="搜索" class="mianshiSearchBtn">
						</div>
					</form>
					
					<div class="offerTips">
						<a href="javascript:;">（数据仅保存3个月）</a>
					</div>
					
					<div class="offerDatas">
						{/if !empty($list)/}
						<table class="offerTable">
							<thead class="offerTbHead">
								<tr>
									<th width="80" class="name">姓名</th>
									<th width="150">职位</th>
									<th width="128">电话</th>
									<th width="162">发送日期</th>
									<th width="93">状态</th>
									<th width="120">操作</th>
								</tr>
							</thead>
							<tbody>
								
								{/foreach $list as $v_list/}
									<tr>
										<td class="name overtext"><a class="j_resume_detail_btn" target="_blank" href="/resume/resumeshow/type-network-resumeid-{/$v_list['resume_id']/}-src-invite-invitid-{/$v_list['invite_id']/}">{/$v_list['user_name']/}</a></td>
										<td class="overtext pos" title="{/$v_list['station']/}">{/$v_list['station']/}</td>
										<td class="overtext">{/$v_list['mobile_phone']/}</td>
										<td class="overtext">{/if $v_list['is_offer_send']/}{/$v_list['send_time_show']/}{/else/}-{//if/}</td>
										<td class="overtext">{/if $v_list['is_offer_send']/}已发送{/else/}未发{//if/}</td>
										<td class="overtext" invite="{/$v_list['invite_id']/}" station="{/$v_list['station']/}">
											<a class="j_send_offer_btn"  target="_blank" href="/offertemplate/index/invite_id-{/$v_list['invite_id']/}">发送</a>
											{/if $v_list['is_offer_send']==1/}<a class="j_see_btn"  target="_blank" href="/offermanager/VisitOffer/invite_id-{/$v_list['invite_id']/}">查看</a>{//if/}
											<a href="javascript:;" class="hasHired" {/if $v_list['audition_result']==9/}style="display:none;"{//if/}>已入职</a>
										</td>
									</tr>
								{//foreach/}
							
							</tbody>
						</table>
						{/else/}
						<div class="noData">
							<p>未找到数据，请更换筛选条件、关键词再试！</p>
	                        <!-- <a class="btn" href="javascript:void(0);" id="btnClearFilterSearch"><i class="hbFntWes">&#xf014;</i>清空筛选/搜索条件</a></p> -->
						</div> 
						{//if/}
					</div>
				</div>
			</hgroup>
			{/$pager/}
		</div>
