<script>

var $lst = $('#lst');
$(document).ready(function() {
	$.focusColor('input.text');
	$.focusColor('textarea.textarea');	
	$lst.find('li').hover(function(){
		$(this).addClass('hov');
	},function(){
		$(this).removeClass('hov');
	});
	$('.NewBulletin').click(function(){
		var id = $(this).attr('data-id');
		$.post('{/get_url rule="/index/CloseNewBulletinMsg"/}',{id:id});
		$.anchorMsg('删除成功！');
		setTimeout('window.location.reload()',1000);

	});
});

/**
 * 消息
 */
var message = {
	init:function() {
		$('#lst').click(function(e){
			 var target  = $(e.target);
			 if(target.is('.delData')) {
				var id = target.attr('v');
				 if(id == undefined){
					 return;
				 }
				$.getJSON('{/get_url rule="/message/Delete"/}',{messageid:id,operate:'single'},function(result){
					if(typeof result.success !='undefined') {
						$.anchorMsg(result.success);
						target.closest('li').remove();
						if($('#lst').find('li').length<=0) {
							$('.noData').show();
						}
						
					}else {
						 $.anchorMsg(result.error, { icon: 'fail' }); 
					}
			 });
		}
	 });
		$('#btnAllDelete').click(function(){
		    if($('#lst ul').find('li').length<=0){
		    	 $.anchorMsg('没有消息可删除', { icon: 'info' }); 
		    	 return;
			}
			$.getJSON('{/get_url rule="/message/Delete"/}',{operate:'all'},function(result){
				if(typeof result.success !='undefined') {
					$.anchorMsg(result.success);
					$('#lst').hide();
					$('.noData').show();
					$('#page').remove();
				}else {
					 $.anchorMsg(result.error, { icon: 'fail' }); 
				}

		});
	});
 }		
};

message.init();
</script>
<script type="text/javascript">
			hbjs.use('@confirmBox', function(m) {
			var	ConfirmBox      = m['widge.overlay.confirmBox'],
				Dialog          = m['widge.overlay.hbDialog'],
				cookie          = m['tools.cookie'],
				fontSize = 18,
				pWidth = 70;
		var informTraining2 = new Dialog({
			close : 'X',
			idName : 'informTraining_dialog',
			title : '服务评分',
			width : 550,
			height:435,
			isOverflow : false,
			isAjax : true
		});
		
		var vmx = '<div class="fd_content"><p>针对您的反馈，客服已经进行相关处理，请对我们的服务进行评分！（1个星星为1分）</p><h3 class="fd_h">当前评分：<span id="zero">0</span>分</h3><h3 id="zero_content"></h3><div id="stars"><span class="icon-evaluate_star"></span><span class="icon-evaluate_star"></span><span class="icon-evaluate_star"></span><span class="icon-evaluate_star"></span><span class="icon-evaluate_star"></span></div><textarea id="txa" placeholder="您也可以写下对于我们此次服务的感受以便帮助我们更好的提高服务（非必填）"></textarea><a href="#" class="fd_a">提交</a></div>';
		var obj={"id":0};
		$('.fd').click(function(){
			informTraining2.setContent(vmx).show();
			var zero = document.getElementById('zero');
			var stars = document.getElementById('stars');
			var ele = stars.children;
			var zero_content=document.getElementById('zero_content');
			var starWordLists=['非常不满意','不满意','一般','满意','非常满意'];
			obj.id=$(this).attr('data-messageid');
			for(var i = 0;i<ele.length;i++){
			  ele[i].setAttribute('data-idx',i);
			  ele[i].setAttribute('clicked',0);
			  ele[i].onclick = function () {
			    var idx = this.getAttribute('data-idx');
			    show(idx);
			    zero.innerHTML = Number(idx)+1;
			    zero_content.innerHTML=starWordLists[idx];
				
			  }
			}
			function show(num) {
			  for(var j = 0;j<ele.length;j++){
			    ele[j].classList.remove('orange');
			  }
			  for(var i = 0;i<=num;i++){
			    ele[i].classList.add('orange');
			  }
			}
		});

				$('body').on('click','.fd_a',function(){
					var message_id = obj.id;
					var content=$('#txa').val();
					var message_appraise=$('#zero').text();
					if(message_appraise == 0 || message_appraise == undefined || message_appraise == ''){
						var msg = "请选择评分";
						ConfirmBox.timeBomb(msg,{
						    name: 'fail',
						    width:fontSize * msg.length + pWidth,
						    timeout : 2000
						});
						return;
					}
					if(content && content.length > 100){
						var msg = "评价内容不能超过100字";
						ConfirmBox.timeBomb(msg,{
						    name: 'fail',
						    width:fontSize * msg.length + pWidth,
						    timeout : 2000
						});
						return;
					}

					$.ajax({
						type:'POST',
						url: '{/get_url rule="/message/MessageAppraiseDo"/}',
						data:{message_appraise:message_appraise,content:content,message_id:message_id},
						dataType:"json",
						success : function(json){
							if(!json.status){
								var msg1 = json.msg;
								ConfirmBox.timeBomb(msg1,{
									name: 'fail',
									width: fontSize * msg1.length + pWidth,
									timeout : 2000
								});
								return false;
							}
							var msg = "你已经提交评分!";
							ConfirmBox.timeBomb(msg,{
								name: 'success',
								width:fontSize * msg.length + pWidth,
								timeout : 2000
							});
							informTraining2.setContent(vmx).hide();
							window.parent.location.reload();
						}
					});
					
				});
});
		</script>
