<script>
    $('.mark').mouseenter(function () {
      $(this).parents('.mark-par').addClass('hover');
    }).mouseleave(function () {
      $(this).parents('.mark-par').removeClass('hover');
    });
    var buy_job_num,pay_dialog,pay_job_check;
    function del(job_id){
        $.confirm('确认删除？',"提示",function () {
            $.post("{/get_url rule='/part/DeleteJob/'/}",{job_id:job_id},function(data){
                if(!data.status){
                    $.anchor(data.msg,{icon:'fail'});
                    return;
                }
                $.anchor(data.msg,{icon:'success'});
                window.location.reload();
            },'json');
        });

    }
