        });
        $('.buyPoint').on('click',function () {
          pay_dialog.show();
        });


        $('#pay_job_check').click(function () {
            pay_job_check.show();
        })


        var indexObj = {
            init:function(){
                if($(".tpartrateList dl").length==0){
                    $("#no_data_show").show();
                }

                $(".setCompanyAgency").click(function(){
                    var tourl = "{/get_url rule='/part/setCompanyAgency/callBackPage-index'/}";
                    setCompanyAgency.setContent({
                        isOverflow: true,
                        content: tourl
                    }).show().on('loadComplete', function(){
                        //this.oneCloseEvent('#subButton');
                        /* 弹窗 */
                        var self = this;
                        this.query("#subButton").on('click', function(){
                            //提交
                            var agency = $("input[name='agency']:checked").val();
                            var params = {agency:agency};
                            $.post('{/get_url rule="/part/setCompanyAgencyDo/"/}', params, function(data) {
                                if(data.error){
                                    ConfirmBox.timeBomb(data.error, {name : 'fail', width: 400});
                                    self.hide();
