  function factory($){
    $(window).scroll(function(){
      if ($(document).scrollTop() > 120){
        $('#sus').find('a.backTop').css({'display':'inline-block'});
      }else{
        $('#sus').find('a.backTop').css({'display':'none'});
      }
    });
    $('#sus').find('a.backTop').click(function(){
      $('html,body').animate({ scrollTop: 0 });
    });
  }
</script>
