            width :530,
            zIndex:9999
        });
        buy_job_num = new Dialog({
            idName : 'sendSmsSSSsss',
            title : '购买发布条数',
            close : 'x',
            isAjax : true,
            content:"{/get_url rule='/partorder/BuyJobNum'/}back_url-{/base_lib_Constant::COMPANY_URL_NO_HTTP/}/part/index",
            width :580,
            zIndex:9999
