<body>
{/include file="new_header.html" cur="发布职位"/}
<div class="compTitMage">
	<h2><em></em>请选择发布职位类型</h2>
	<p>
		{/if $is_gov!=1/}
			<a href="javascript:;" onclick="job_add_full('{/$allotCouponPricing_data.id/}');">发布全职职位</a>
		{/else/}
			<a href="{/get_url rule="/job/add/"/}">发布职位</a>
		{//if/}
		{/if $is_gov!=1/}
			{/if in_array(substr($base_location_area,0,2),['03','15','26'])/}
				{/if !$has_set_agency/}
					<a href="javascript:;" id='setCom' class="do_pub orange">发布兼职职位</a>
					<a href="{/get_url rule='/partjob/job'/}" style='display:none' id='setCompanyAgencyLast' class="do_pub orange">发布兼职职位</a>
				{/else/}
					<a href="javascript:;" class="do_pub orange">发布兼职职位</a>
				{//if/}
			{/else/}
				<a href="javascript:;" class="gray">发布兼职职位</a>
			{//if/}
		{//if/}
	</p>
</div>
<input type='hidden' id='setCompanyAgency'/>
</body>
<script>
    var job_add_full_url = "{/get_url rule="/job/add/"/}";
    var modJobExpire, dialog_msg_liao;
    hbjs.use('widge.overlay.confirmBox, widge.overlay.hbDialog, product.hbCommon', function (ConfirmBox, Dialog, $) {
		{/if $martchCalling/}
        ConfirmBox.alert("我们对行业做了一些调整，请在企业资料中重新选择后再操作", function () {
            // var newwindow = window.open('about:blank');
            window.location.href = "{/$siteurl.company|replace:'http:':''/}/company/modify";
        }, {
            title: '操作提示',
            idName: 'alertUI',
            width: 500
        });
		{//if/}

        var setCompanyAgency = new Dialog({
            idName: 'setCompanyAgencyDialog',
            title: '设置招聘类型',
            close: 'x',
            isAjax: true,
            width: 300
        });


        $('#setCompanyAgency').on('click', function (e) {
			{/if $has_set_agency/}
            location.href = "{/get_url rule='/partjob/job'/}";
            return;
			{//if/}
            weixinDialog.hide();
            clearInterval(setI);
            tourl = "{/get_url rule='/part/setCompanyAgency/callBackPage-index'/}";
            setCompanyAgency.setContent({
                isOverflow: true,
                content: tourl
            }).show().on('loadComplete', function () {
                //this.oneCloseEvent('#subButton');
				/* 弹窗 */
                var self = this;
                this.query("#subButton").on('click', function () {
                    //提交
                    var agency = $("input[name='agency']:checked").val();
                    var params = {agency: agency};
                    $.post('{/get_url rule="/part/setCompanyAgencyDo/"/}', params, function (data) {
                        if (data.error) {
                            ConfirmBox.timeBomb(data.error, {name: 'fail', width: 400});
                            self.hide();
                            return;
                        }
                        ConfirmBox.timeBomb(data.success, {name: 'success', width: 200});//28724394
                        SelectCallBack();
                        self.hide();
                        setTimeout("location.href='{/get_url rule='/partjob/job'/}'", 1000);
                    }, "json");
                }).after('', function () {
                    this.query('#subButton').off();
                })
            });
        });

        var setI
        var wx_html = '<div class="weixin-follow">' +
            '    <div class="weixin-follow-img">' +
            '        <img id="twd_url" src="https://mp.weixin.qq.com/cgi-bin/showqrcode?ticket={/$ticket/}" alt="">' +
            '    </div>' +
            '    <p>微信扫码关注汇博兼职公众号</p>' +
            '    <ul class="weixin-follow-list clearfix">' +
            '        <li><i></i>快捷发布职位</li>' +
            '        <li><i></i>便捷职位管理</li>' +
            '        <li><i></i>投递微信处理</li>' +
            '        <li><i></i>免费群发短信</li>' +
            '    </ul>' +
            '    <p class="weixin-follow-text-left">注：汇博兼职服务号专用于兼职投递信息处理，全职招聘请关注汇博招聘服务号。</p>' +
            '    <a href="javascript:;" class="weixin-follow-jump">跳过</a>' +
            '</div>';
        var weixinDialog = new Dialog({
            idName: 'weixinDialog',
            title: '关注微信公众号',
            isAjax: true,
            width: 550
        });

        $('.do_pub').click(function () {
            $.ajax({
                url: "{/$siteurl.company/}/part/IsBindWx",
                type: "post",
                data: {},
                dataType: 'json',
                success: function (res) {
                    if (res.status) {
                        if (res.is_show) {
                            if (res.ticket) {
                                $('#twd_url').attr('src', "https://mp.weixin.qq.com/cgi-bin/showqrcode?ticket=" + res.ticket)
                            }
                            weixinDialog.show();
                            setI = setInterval(function () {
                                $.ajax({
                                    url: "{/$mjianzhi_url/}/weixin/GetUserStatus",
                                    type: "post",
                                    data: {company_id: "{/$company_id/}"},
                                    dataType: 'jsonp',
                                    jsonp: "jsonpCallback",
                                    success: function (res) {
                                        if (res.status && res.can_go) {

                                            $('#setCompanyAgency').click();
                                        }
                                    }

                                })
                            }, 2500);
                        } else {
                            $('#setCompanyAgency').click();
                        }
                    } else {
                        weixinDialog.show();
                        setI = setInterval(function () {
                            $.ajax({
                                url: "{/$mjianzhi_url/}/weixin/GetUserStatus",
                                type: "post",
                                data: {company_id: "{/$company_id/}"},
                                dataType: 'jsonp',
                                jsonp: "jsonpCallback",
                                success: function (res) {
                                    if (res.status && res.can_go) {
                                        $('#setCompanyAgency').click();
                                    }
                                }

                            })
                        }, 2500);
                    }
                }
            })


            weixinDialog.setContent(wx_html);
            weixinDialog.query('.weixin-follow-jump').on('click', function () {
                $('#setCompanyAgency').click();
            })


        })

        function SelectCallBack() {
            $("#setCom").hide();
            $("#setCompanyAgencyLast").show();
        }


        dialog_msg_liao = new Dialog({
            close: '╳',
            idName: 'liaoyiliao',
            width: 'auto',
            title: '提示',
            isAjax: true,
            isOverflow: false
        });
    });

    function job_add_full(id) {
        id = Number(id);
        if (id) {
            dialog_msg_liao.setContent("{/get_url rule='/resume/resumeinfomsghtml'/}?type=1").show();
        } else {
            if (job_add_full_url) {
                window.location.href = job_add_full_url;
            }
        }
    }

    function dialog_msg_liao_reload(){
        window.location.href = job_add_full_url;
    }

</script>