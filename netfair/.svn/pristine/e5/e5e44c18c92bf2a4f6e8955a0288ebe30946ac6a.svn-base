<div class="dgBox ajaxlogin">
	<div class="lngBox-border clearfix">
		<div class="formCon clearfix">
			<div class="form">
				<form id="frmUserLogin" action='{/get_url rule="/loginCompany/LoginDo/"/}' method="post">
					<input type="hidden" name="school_source" value="{/$school_source/}"/>
					<div class="formMod">
						<div class="r"><span class="formText"><input type="text" class="text " id="id"
																	 name="txtUserName" placeHolder="请输入用户名"/></span>
						</div>
						<div class="clear"></div>
					</div>
					<div class="formMod">
						<div class="r"><span class="formText"><input type="password" class="text " id="pass"
																	 name="txtPassword" placeHolder="请输入密码"/></span></div>
						<div class="clear"></div>
					</div>
					<div class="formMod" id="verifycode">
						<input type="hidden" value="{/$seed/}" name="seed" id='login_seed'>
						<span class="formText">
                            <input type="text" id="txtCode" name="catcha" class="text" placeholder="请输入图片验证码" style="width: 136px;" />
                        </span>
						<span class="yzImg">
                             <img id="imgCode2" src='/login/verify/seed-{/$seed/}'/>
                        </span>
						<span class="tipTxt">
                            <a id="btnCode2" href="javascript:void(0);">换一张</a>
                        </span>
						<div class="clear"></div>
					</div>
					{/*<div class="formMod">*/}
					{/*	<div class="r">*/}
					{/*		<span class="formChb"></span>*/}
					{/*		<span class="tipTxt"><a*/}
					{/*					href='{/get_url domain="person" rule="/loginCompany/findpassword/"/}'>忘记密码</a></span>*/}
					{/*	</div>*/}
					{/*	<div class="clear"></div>*/}
					{/*</div>*/}
					<div class="formBtn"><a href="javascript:void(0);" class="btn1 btnsF16" id="btnLogin">登录</a></div>
				</form>
			</div>
		</div>
	</div>
	<div class="clear"></div>
</div>

<script type="text/javascript">
    var sendMsgUrl = "/loginCompany/BlueSendAuthCode";
    try {
        hbjs.use('@jobDialog, @hbCommon, @form, @dialog', function (m) {

            var dialog = m['cqjob.jobDialog'],
                hbCommon = m['product.hbCommon'],
                validate = m['cqjob.jobValidate'],
                form = m['cqjob.jobForm'],
                Dialog = m['widge.overlay.hbDialog'];

            factory(dialog.extend(hbCommon, validate, form), Dialog);
        });
    } catch (e) {
        factory($);
    }

    function factory($, Dialog) {
        $('input.text').placeHolder();
        var frmUserLogin = $("#frmUserLogin").validate({
            rules: {
                txtUserName: {
                    required: true,
                },
                txtPassword: {
                    required: true,
                },
            },
            messages: {
                txtUserName: {
                    required: '请输入用户名 <span class="tipArr"></span>',
                },
                txtPassword: {
                    required: '请输入密码<span class="tipArr"></span>',
                },
            },
            errorClasses: {
                txtUserName: {
                    required: 'tipLayErr tipw120',
                },
                txtPassword: {
                    required: 'tipLayErr tipw120',
                },
            },
            tipClasses: {
                txtUserName: 'tipLayTxt tipw120',
                txtPassword: 'tipLayTxt tipw120',
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                element.closest('div.formMod').find('.tipPos .tipLay').empty().append(error);
            },
            success: function (label) {
                label.text(" ");
            },
        });
        var frmUserLoginPhone = $("#frmUserLoginPhone").validate({
            rules: {
                txtMobilePhone: {
                    required: false,
                },
            },
            messages: {
                txtMobilePhone: {
                    required: '请输入手机号码 <span class="tipArr"></span>',
                },
            },
            errorClasses: {
                txtUserName: {
                    required: 'tipLayErr tipw120',
                },
            },
            tipClasses: {
                txtMobilePhone: 'tipLayTxt tipw120',
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                element.closest('div.formMod').find('.tipPos .tipLay').empty().append(error);
            },
            success: function (label) {
                label.text(" ");
            },
        });
        /**
         * 登录
         */
        var login = {
            init: function () {
                $("#id,#pass").keydown(function (e) {
                    if (e.keyCode == 13) {
                        $("#btnSubMobile").click();
                    }
                });
                $('#btnLogin').click(function(){
                    var txtUserName = $('[name=txtUserName]').val();
                    var txtPassword = $('[name=txtPassword]').val();
                    var catcha = $('[name=catcha]').val();
                    if ($.trim(txtUserName) == '') {
                        $.anchorMsg('请输入用户名', {title: '操作失败', icon: "fail"});
                        return;
                    }
                    if ($.trim(txtPassword) == '') {
                        $.anchorMsg('请输入密码', {title: '操作失败', icon: "fail"});
                        return;
                    }
                    if ($.trim(catcha) == '') {
                        $.anchorMsg('请输入图片验证码', {title: '操作失败', icon: "fail"});
                        return;
                    }
                    $(this).submitForm({ beforeSubmit: $.proxy(frmUserLogin.form, frmUserLogin),success:function(result){
                            if(result.error){
                                $('#imgCode2').click();
                                $.anchorMsg(result.error,{title:'操作失败',icon: "fail"});
                            }
                            else if(result.success){
                                $.anchorMsg(result.success,{title: "操作成功", icon: "success"});
                                if(result.create_resume_url){
                                    window.parent.document.location.href = result.create_resume_url;
                                    return;
                                }
                                if('{/$request_url/}'){
                                    window.parent.document.location.href = '{/$request_url/}';
                                    return;
                                }
                                if(!result.isbindwx){
                                    window.parent.document.location.href = "/login/BindPersonWx/?backurl={/$request_url/}";
                                    return;
                                }
                            }
                        },clearForm:false});
                });

                $('#imgCode2,#btnCode2').click(function () {
                    $('#imgCode2').attr('src', '/loginCompany/verify/seed-{/$seed/}' + '-v-' + Math.random());
                    return false;
                });

            },
        };
        login.init();
    };

    function sleep(numberMillis) {
        var now = new Date();
        var exitTime = now.getTime() + numberMillis;
        while (true) {
            now = new Date();
            if (now.getTime() > exitTime)
                return;
        }
    }

    function exeCallBack() {
        var callback = {/if !empty($callback)/} {/$callback/}{/else/}null{//if/};
        if (typeof callback != '' && typeof callback != 'undefined' && typeof callback == 'function') {
            callback($);
        }
    }

    $('.loginType').on('click', 'li', function () {
        $(this).addClass('active').siblings().removeClass('active');
        var index = $(this).index();
        $("#opt").val(index);
        $('.formCon .form').eq(index).addClass('formShow').siblings().removeClass('formShow');
    });

</script>
</body>
</html>
