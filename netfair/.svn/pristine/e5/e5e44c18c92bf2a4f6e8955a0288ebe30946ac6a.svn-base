	.formMod .formChb label input { display : inline-block; vertical-align : middle;}
	#frmUserLogin .link {height : auto}
	.dgBox { padding : 30px 20px 30px 55px;}
	.form {width : 230px; border-right : 1px dashed #cbcbcb; float : left;}
