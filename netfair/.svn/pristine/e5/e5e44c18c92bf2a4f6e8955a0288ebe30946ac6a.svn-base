	.formMod .tipTxt {padding-left : 0;float : right;}
	.ajaxlogin .txt {margin-top : 36px;}
	.formMod {margin-left : 0px;}
	.lngBox-border {width : 264px;
		/*border-right: 1px dashed #e8e8e8;*/
		float             : left;padding-right : 20px;}
